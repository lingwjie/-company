<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

     <LinearLayout  
        android:id="@+id/id_back"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  
        android:background="#ffcccccc"  
        android:gravity="center|right" >  
  
        <Button  
            android:id="@+id/id_remove"  
            android:layout_width="60dp"  
            android:layout_height="wrap_content"  
            android:layout_gravity="center"  
            android:layout_marginRight="4dp"  
              
            android:text="Delete"  
            android:textColor="#fff" >  
        </Button>  
    </LinearLayout> 

    <RelativeLayout
        android:id="@+id/front"
        android:orientation="vertical"
        android:tag="front"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="80dp" >

         <ImageView
        android:id="@+id/bg_versions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textSize="13sp" />
    
    <ImageView
        android:id="@+id/bg_white"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" />
    <LinearLayout
        android:id="@+id/tablelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 第1列 -->

        <ImageView
            android:id="@+id/book"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" />
        
        <!-- 第2列 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="91dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/learning_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9fce71"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/learning_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>
        
        <!-- 第3列 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9fce71"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/learning_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>
        <!-- 第4列 -->
    </LinearLayout>
    <TextView 
        android:id="@+id/all_person"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="500dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#919191"
        android:textSize="13sp"/>
    </RelativeLayout>

</FrameLayout>